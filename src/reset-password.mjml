<mjml>
  <mj-head>
    <!-- Fonts -->

    <!-- English fonts -->
    <mj-font
      name="Space Grotesk"
      href="https://fonts.googleapis.com/css?family=Space+Grotesk"
    />
    <mj-font
      name="Inter"
      href="https://fonts.googleapis.com/css?family=Inter"
    />

    <!-- Thai fonts -->
    <mj-font
      name="IBM Plex Sans Thai"
      href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans+Thai"
    />
    <mj-font
      name="Sarabun"
      href="https://fonts.googleapis.com/css?family=Sarabun"
    />

    <!-- Styles -->
    <!-- prettier-ignore -->
    <mj-style inline="inline">
      .btn-rounded td,
      .btn-rounded a {
        border-radius: 9999px !important;
      }

      .no-gap td {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
      }
    </mj-style>
  </mj-head>
